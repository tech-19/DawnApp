#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name:'profile'
    ProfilePageLayout:

        MenuButton:
            MenuImage



        MDFloatLayout:
            SignoutButton:
        SignoutLabel:

        UserImage:
        UserNameLabel:
            id: first-last_name

        EditIcon:
            id: edit_btn
            on_press: app.go_to('profile_diagnoseMe')
            Image:
                source: 'edit.png'


        OpenCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.53}
            CardContentBox:
                CardContentImage:
                    source: 'person_logo.png'
                CardContentLabel:
                    text: "My Account"
                ArrowButton:
                    ArrowDown:


            MDBoxLayout:
                orientation: "horizontal"
                LeftLabel:
                    text: "First Name"
                RightLabel:
                    id: first_name
                    text: ""


            MDBoxLayout:
                orientation: "horizontal"
                LeftLabel:
                    text: "Last Name"
                RightLabel:
                    id: last_name
                    text: ""


            MDBoxLayout:
                orientation: "horizontal"
                LeftLabel:
                    text: "Date Birth"
                RightLabel:
                    id: date_of_birth
                    text: "DD/MM/YYYY"


            MDBoxLayout:
                orientation: "horizontal"
                LeftLabel:
                    text: "Height"
                RightLabel:
                    id: height
                    text: " cm"

            MDBoxLayout:
                orientation: "horizontal"
                LeftLabel:
                    text: "Weight"
                RightLabel:
                    id: weight
                    text: " kg"









        ClosedCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.29}
            CardContentBox:
                CardContentImage:
                    source: 'list_logo.png'
                CardContentLabel:
                    text: "Diagnose Me"
                ArrowButton:
                    on_press: app.go_to('profile_diagnoseMe')
                    ArrowRight:

        ClosedCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.185}
            CardContentBox:
                CardContentImage:
                    source: 'shield_logo.png'
                CardContentLabel:
                    text: "Security"
                ArrowButton:
                    on_press: app.go_to('profile_security')
                    ArrowRight:






        #*************** Bottom navbar **************


        NavbarBox:

            ButtonBox:
                HomeButton:
            ButtonBox:
                DailyButton:
            ButtonBox:
                DiagnoseButton:
            ButtonBox:
                ProfileButton:
        BottomNavbarCard:
        NavbarBox:
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: home_btn
                    source: 'home.png'
                MDLabel:
                    halign: "center"
                    text: "Home"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: daily_btn
                    source: 'daily.png'
                MDLabel:
                    halign: "center"
                    text: "Daily"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: diagnose_btn
                    source: 'diagnose.png'
                MDLabel:
                    halign: "center"
                    text: "Diagnose"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: profile_btn
                    source: 'profile.png'
                MDLabel:
                    halign: "center"
                    text: "Profile"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")

