#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name:'profile_diagnoseMe'
    ProfilePageLayout:

        MenuButton:
            MenuImage:

        MDFloatLayout:
            SignoutButton:
        SignoutLabel:


        UserImage:

        EditIcon:
            on_press: app.profile_changes('diagnose')
            on_press: app.go_to('profile')
            Image:
                source: 'assets/images/plus_btn.png'


        UserNameLabel:





        ClosedCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.66}

            CardContentBox:
                CardContentImage:
                    source: 'assets/images/person_logo.png'
                CardContentLabel:
                    text: "My Account"
                ArrowButton:
                    on_press: app.go_to('profile')
                    ArrowRight:


        OpenCard:
            id: diagnose_me
            md_bg_color: get_color_from_hex("#FFFFFF")
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            CardContentBox:
                size_hint: 1 , 0.3
                CardContentImage:
                    source: 'assets/images/list_logo.png'
                CardContentLabel:
                    text: "Diagnose Me"
                ArrowButton:
                    ArrowDown:











        ClosedCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.56 - 0.38}
            CardContentBox:
                CardContentImage:
                    source: 'assets/images/shield_logo.png'
                CardContentLabel:
                    text: "Security"
                ArrowButton:
                    on_press: app.go_to('profile_security')
                    ArrowRight:



        #*************** Bottom navbar **************


        NavbarBox:

            ButtonBox:
                HomeButton:
            ButtonBox:
                DailyButton:
            ButtonBox:
                DiagnoseButton:
            ButtonBox:
                ProfileButton:
        BottomNavbarCard:
        NavbarBox:
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: home_btn
                    source: 'assets/images/home.png'
                MDLabel:
                    halign: "center"
                    text: "Home"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: daily_btn
                    source: 'assets/images/daily.png'
                MDLabel:
                    halign: "center"
                    text: "Daily"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: diagnose_btn
                    source: 'assets/images/diagnose.png'
                MDLabel:
                    halign: "center"
                    text: "Diagnose"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: profile_btn
                    source: 'assets/images/profile.png'
                MDLabel:
                    halign: "center"
                    text: "Profile"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")

