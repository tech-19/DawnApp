#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window



MDScreen:
    name: 'login'
    LoginLayout:


        MDFillRoundFlatButton:
            id: login_btn
            halign: "center"
            md_bg_color: get_color_from_hex("#012241")
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            on_press: app.go_to('question')

        ArrowButton:
            id: sign_up_page
            pos_hint: {"center_x": 0.56, "center_y": 0.02}
            on_press: app.go_to('signup')

        LoginLabelCard:
            pos_hint: {"center_x": 0.6, "center_y": 0.8}
            LoginHeaderLabel:
                text: 'Login'


        LoginLabelCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.6 + 0.1}
            LoginGeneralLabel:
                text: 'Username'
        LoginInputCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.53 + 0.1}
            MDBoxLayout:
                orientation: "horizontal"
                LoginInputField:
                    id: username_login


        LoginLabelCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.47 + 0.1}
            LoginGeneralLabel:
                text: 'Password'
        LoginInputCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.4 + 0.1}
            MDBoxLayout:
                orientation: "horizontal"
                LoginInputField:
                    id: password_login
                    password: True


        LoginLabelCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.33 + 0.1}
            LoginGeneralLabel:
                text: 'Forgot password?'
                halign: 'right'



        LoginButton:
            pos_hint: {"center_x": 0.5, "center_y": 0.22}
            MDBoxLayout:
                LoginButtonLabel:
                    text: 'LOGIN'
                    bold: True





        MDCard:
            orientation: "vertical"
            md_bg_color: get_color_from_hex("#012241")
            size_hint: 0.9 , 0.02
            elevation: 0
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            LoginFooterLabel:
                text: 'or'



        MDCard:
            orientation: "horizontal"
            md_bg_color: get_color_from_hex("#012241")
            size_hint: 0.9 , 0.02
            elevation: 0
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            MDFloatLayout:
                MDIconButton:
                    halign: "center"
                    icon: "assets/images/facebook_logo.png"
                    on_release: app.facebook_login()
                    size: self.parent.size
                    user_font_size: "5sp"
                    pos_hint: {"center_x": 0.43, "center_y": 0.5}
                MDIconButton:
                    halign: "center"
                    icon: "assets/images/google_logo.png"
                    on_release: app.google_login()
                    size: self.parent.size
                    user_font_size: "5sp"
                    pos_hint: {"center_x": 0.57, "center_y": 0.5}




        LoginFooter:
            LoginFooterLabel:
                text: "Don't have an account? Sign Up"

