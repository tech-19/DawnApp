#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name:'daily'
    MDFloatLayout:
        md_bg_color: get_color_from_hex("#FDFAF7")
        orientation: 'vertical'

        MenuButton:
            MenuImage:
        ArrowButton:
            pos_hint: {"center_x": 0.15 , "center_y": 0.95}
            on_press: app.go_to('back')
            Image:
                size_hint: 0.6 , 0.6
                source: 'assets/images/left_button.png'


        CenterdCardForText:
            MDLabel:
                halign: "left"
                color: 0,0.439,0.313,1
                text: 'Daily Indices'
                font_style: "H5"
                bold: True

        DailyMainBody:
            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: '70 %'
                    ProgressBox:
                        ProgressLabel:
                            text: "Skin Moisturizing"
                        DailyProgressBar:
                            value: 70
                    ArrowButton:
                        ArrowRight:
            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: '21 %'
                    ProgressBox:
                        ProgressLabel:
                            text: "Body Tempreture"
                        DailyProgressBar:
                            value: 21
                    ArrowButton:
                        ArrowRight:

            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: '38 %'
                    ProgressBox:
                        ProgressLabel:
                            text: "Cardiovascular Efficiency"
                        DailyProgressBar:
                            value: 38
                    ArrowButton:
                        ArrowRight:

            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: '95 %'
                    ProgressBox:
                        ProgressLabel:
                            text: "Blood Pressure"
                        DailyProgressBar:
                            value: 95
                    ArrowButton:
                        ArrowRight:

            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: '82 %'
                    ProgressBox:
                        ProgressLabel:
                            text: "Blood Glucose"
                        DailyProgressBar:
                            value: 82
                    ArrowButton:
                        ArrowRight:

            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: '34 %'
                    ProgressBox:
                        ProgressLabel:
                            text: "Muscle Pressure"
                        DailyProgressBar:
                            value: 34
                    ArrowButton:
                        ArrowRight:

            ProgressCard:
                CardContentBox:
                    DailyPrecent:
                        text: ''
                    ProgressBox:
                        ProgressLabel:
                            text: ''
                        DailyProgressBar:
                            value:
                    ArrowButton:
                        ArrowRight:





        #*************** Bottom navbar **************


        NavbarBox:

            ButtonBox:
                HomeButton:
            ButtonBox:
                DailyButton:
            ButtonBox:
                DiagnoseButton:
            ButtonBox:
                ProfileButton:
        BottomNavbarCard:
        NavbarBox:
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: home_btn
                    source: 'assets/images/home.png'
                MDLabel:
                    halign: "center"
                    text: "Home"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: daily_btn
                    source: 'assets/images/daily.png'
                MDLabel:
                    halign: "center"
                    text: "Daily"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: diagnose_btn
                    source: 'assets/images/diagnose.png'
                MDLabel:
                    halign: "center"
                    text: "Diagnose"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: profile_btn
                    source: 'assets/images/profile.png'
                MDLabel:
                    halign: "center"
                    text: "Profile"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")

