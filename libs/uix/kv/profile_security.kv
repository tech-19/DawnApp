#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name:'profile_security'
    ProfilePageLayout:

        MenuButton:
            MenuImage:
        ArrowButton:
            pos_hint: {"center_x": 0.15 , "center_y": 0.95}
            on_press: app.go_to('back')
            Image:
                size_hint: 0.6 , 0.6
                source: 'assets/images/left_button.png'


        UserImage:
        EditIcon:
            on_press: app.profile_changes('security')
            on_press: app.go_to('profile')
            Image:
                source: 'assets/images/plus_btn.png'

        UserNameLabel:







        ClosedCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.66}
            CardContentBox:
                CardContentImage:
                    source: 'assets/images/person_logo.png'
                CardContentLabel:
                    text: "My Account"
                ArrowButton:
                    on_press: app.go_to('profile')
                    ArrowRight:



        ClosedCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.56}
            CardContentBox:
                CardContentImage:
                    source: 'assets/images/list_logo.png'
                CardContentLabel:
                    text: "Diagnose Me"
                ArrowButton:
                    on_press: app.go_to('profile_diagnoseMe')
                    ArrowRight:


        OpenCard:
            size_hint: 0.8 , 0.3
            pos_hint: {"center_x": 0.5, "center_y": 0.34}
            CardContentBox:
                CardContentImage:
                    source: 'assets/images/shield_logo.png'
                CardContentLabel:
                    text: "Security"
                ArrowButton:
                    ArrowDown:

            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Password"
                    halign: "left"
                    font_style: "Body2"
                    color: 0,0,0,1


            MDBoxLayout:
                SecurityInputField:
                    id: current_password_check
                    hint_text: 'Current password'
                    on_focus: app.keypad_listener(self.parent.parent.pos_hint , self.focus)

            MDBoxLayout:
                SecurityInputField:
                    id: new_password
                    hint_text: 'New password'
                    on_focus: app.keypad_listener(self.parent.parent.pos_hint , self.focus)

            MDBoxLayout:
                SecurityInputField:
                    id: new_password_check
                    hint_text: 'New password, again'
                    on_focus: app.keypad_listener(self.parent.parent.pos_hint , self.focus)





        #*************** Bottom navbar **************


        NavbarBox:

            ButtonBox:
                HomeButton:
            ButtonBox:
                DailyButton:
            ButtonBox:
                DiagnoseButton:
            ButtonBox:
                ProfileButton:
        BottomNavbarCard:
        NavbarBox:
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: home_btn
                    source: 'assets/images/home.png'
                MDLabel:
                    halign: "center"
                    text: "Home"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: daily_btn
                    source: 'assets/images/daily.png'
                MDLabel:
                    halign: "center"
                    text: "Daily"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: diagnose_btn
                    source: 'assets/images/diagnose.png'
                MDLabel:
                    halign: "center"
                    text: "Diagnose"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"

                Image:
                    id: profile_btn
                    source: 'assets/images/profile.png'
                MDLabel:
                    halign: "center"
                    text: "Profile"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")









