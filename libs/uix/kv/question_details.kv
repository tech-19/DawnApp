#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window




MDScreen:
    name: 'question_details'
    MDBoxLayout:
        orientation: 'vertical'

        MDFloatLayout:
            md_bg_color: get_color_from_hex("#FDFAF7")
            orientation: 'vertical'

            ArrowButton:
                pos_hint: {"center_x": 0.15 , "center_y": 0.95}
                on_press: app.go_to('prev_question')
                Image:
                    size_hint: 0.6 , 0.6
                    source: 'assets/images/left_button.png'


            MDBoxLayout:
                size_hint: 0.8 , 1
                halign: "left"
                pos_hint: {"center_x": .5 , "center_y": 0.9}

                MDLabel:
                    text: 'Write your details'
                    halign: "left"
                    pos_hint: {"center_x": .6 , "center_y": 0.5}
                    color: 0,0.439,0.313,1
                    font_style: "H6"
                    bold: True

            MDCard:
                orientation: "vertical"
                padding: 10
                md_bg_color: get_color_from_hex("#FFFFFF")
                size_hint: 0.8 , 0.13
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
                elevation: 3
                radius: [10]

                MDLabel:
                    text: "Date of Birth"
                    color: 0,0,0,0.4
                    bold: True
                    font_style: 'Body2'
                MDCard:
                    radius: [10]
                    elevation: 0
                    md_bg_color: get_color_from_hex("#F5F5F6")
                    padding: 5
                    MDLabel:
                        id: date_of_birth
                        color: 0,0,0,0.4
                        text: 'd - m - y'
                        halign: "left"
                        font_style: 'Body2'

                    ArrowButton:
                        #on_press: app.show_date_picker()
                        ArrowRight:


            MDCard:
                orientation: "vertical"
                padding: 10
                md_bg_color: get_color_from_hex("#FFFFFF")
                size_hint: 0.8 , 0.13
                pos_hint: {"center_x": 0.5, "center_y": 0.8}
                elevation: 3
                radius: [10]
                MDLabel:
                    halign: "left"
                    text: "Date of birth"
                    color: 0,0,0,0.4
                    bold: True
                    font_style: 'Body2'
                MDBoxLayout:
                    id: sign_date_of_birth
                    orientation: "horizontal"
                    MDTextField:
                        id: day_field
                        input_filter: 'int'
                        halign: "center"
                        hint_text: 'Day'
                        on_text: app.date_validation(self.text)
                    MDTextField:
                        id: month_field
                        input_filter: 'int'
                        halign: "center"
                        hint_text: 'Month'
                        on_text: app.date_validation(self.text)
                    MDTextField:
                        id: year_field
                        input_filter: 'int'
                        halign: "center"
                        hint_text: 'Year'
                        on_text: app.date_validation(self.text)








            MDCard:
                orientation: "horizontal"
                padding: 10
                md_bg_color: get_color_from_hex("#FFFFFF")
                size_hint: 0.8 , 0.1
                pos_hint: {"center_x": 0.5, "center_y": 0.55 + 0.12}
                elevation: 3
                radius: [10]
                MDLabel:
                    halign: "left"
                    text: "Weight"
                    color: 0,0,0,0.4
                    bold: True
                    font_style: 'Body2'
                MDCard:
                    md_bg_color: get_color_from_hex("#F5F5F6")
                    halign: "center"
                    size_hint: .45 , .8
                    radius: [10]
                    elevation: 0
                    MDTextField:
                        id: weight_input
                        pos_hint: {"center_x": 0.43, "center_y": 0.5}
                        halign: "center"
                    MDLabel:
                        halign: "center"
                        text: " kg"
                        color: 0,0,0,0.8
                        bold: True
                        font_style: 'Body2'

            MDCard:
                orientation: "horizontal"
                padding: 10
                md_bg_color: get_color_from_hex("#FFFFFF")
                size_hint: 0.8 , 0.1
                pos_hint: {"center_x": 0.5, "center_y": 0.44  + 0.12}
                elevation: 3
                radius: [10]

                MDLabel:
                    halign: "left"
                    text: "Height"
                    color: 0,0,0,0.4
                    bold: True
                    font_style: 'Body2'
                MDCard:
                    md_bg_color: get_color_from_hex("#F5F5F6")
                    halign: "center"
                    size_hint: .45 , .8
                    radius: [10]
                    elevation: 0
                    MDTextField:
                        id: height_input
                        pos_hint: {"center_x": 0.43, "center_y": 0.5}
                        halign: "center"
                    MDLabel:
                        halign: "center"
                        text: " cm"
                        color: 0,0,0,0.8
                        bold: True
                        font_style: 'Body2'


            QuestionButton:
                pos_hint: {"center_x": .5 , "center_y": 0.09}
                Button:
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": .5 , "center_y": 0.09}
                    on_press: app.update_patient()
                    on_release: app.go_to('profile')
            QuestionButton:
                id: next_btn
                pos_hint: {"center_x": .5 , "center_y": 0.09}
                md_bg_color: get_color_from_hex("#012241")
                QuestionButtonLabel:
                    text: "Next"
                    color: 1,1,1,1



