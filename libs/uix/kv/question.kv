#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name: 'question'

    ProfilePageLayout:



        ArrowButton:
            pos_hint: {"center_x": 0.15 , "center_y": 0.95}
            on_press: app.go_to('prev_question')
            Image:
                size_hint: 0.6 , 0.6
                source: 'assets/images/left_button.png'


        #CountImage:
        #    id: count



        MDBoxLayout:
            pos_hint: {"center_x": 0.5 , "center_y": 0.7}
            size_hint: 0.9 , 0.3
            QuestionImage:
                id: question_img

        MDBoxLayout:

            size_hint: 0.9 , 0.25
            pos_hint: {"center_x": 0.5 , "center_y": 0.5}
            orientation: 'vertical'

            MDBoxLayout:
                MDLabel:
                    text: "QUESTION 1 OF 9"
                    valign: "bottom"
                    id: question_number
                    font_style: "Body2"
                    color: 0,0,0,0.5
                    bold: True
            MDBoxLayout:
                MDLabel:
                    id: question_text
                    text: app.cur_question
                    halign: "left"
                    pos_hint: {"center_x": .6 , "center_y": 0.41}
                    color: 0,0.439,0.313,1
                    bold: True
                    font_style: 'H6'



        QuestionButton:
            pos_hint: {"center_x": .5 , "center_y": 0.27}
            Button:
                pos_hint: {"center_x": .5 , "center_y": 0.5}
                background_color: 0,0,0,0
                on_press: app.on("yes")
        QuestionButton:
            id: yes_btn
            pos_hint: {"center_x": .5 , "center_y": 0.27}
            QuestionButtonLabel:
                id: yes_btn_label
                text: "Yes"



        QuestionButton:
            pos_hint: {"center_x": .5 , "center_y": 0.185}
            Button:
                background_color: 0,0,0,0
                pos_hint: {"center_x": .5 , "center_y": 0.185}
                on_press: app.on("no")
        QuestionButton:
            id: no_btn
            pos_hint: {"center_x": .5 , "center_y": 0.185}
            QuestionButtonLabel:
                id: no_btn_label
                text: "No"



        QuestionButton:
            pos_hint: {"center_x": .5 , "center_y": 0.09}
            Button:
                background_color: 0,0,0,0
                pos_hint: {"center_x": .5 , "center_y": 0.09}
                on_press: app.go_to('next_question')
        QuestionButton:
            id: next_btn
            pos_hint: {"center_x": .5 , "center_y": 0.09}
            md_bg_color: get_color_from_hex("#012241")
            QuestionButtonLabel:
                text: "Next"
                color: 1,1,1,1













