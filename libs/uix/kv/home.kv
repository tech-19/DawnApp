#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window


MDScreen:
    name:'home'
    ProfilePageLayout:

        MenuButton:
            MenuImage:
        ArrowButton:
            pos_hint: {"center_x": 0.15 , "center_y": 0.95}
            on_press: app.go_to('back')
            Image:
                size_hint: 0.6 , 0.6
                source: 'assets/images/left_button.png'

        CenterdCardForText:
            MDBoxLayout:
                size_hint: 0.4 , 1
                SmallUserImage:
            MDBoxLayout
                orientation: "vertical"
                HomeNameLabel:
                    id: hello-first_name
                    bold: True
                HomeGreet:



        ################# BUTTONS #################
        LowTwoButtonBox:
            HomeButtonCard:
                padding: 20
                Button:
                    background_color: 0,0,0,0
                    on_press: app.hello('Blood test function')
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}

            HomeButtonCard:
                padding: 20
                Button:
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": 0.5 , "center_y": 0.4}
                    on_press: app.hello('Ask the doctor function')

        UpTwoButtonBox:
            HomeButtonCard:
                padding: 20
                Button:
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    on_press: app.go_to('question')
            HomeButtonCard:
                padding: 20
                Button:
                    background_color: 0,0,0,0
                    pos_hint: {"center_x": 0.5 , "center_y": 0.4}
                    on_press: app.go_to('diagnose')


        ################# IMAGES #################

        LowTwoButtonBox:
            HomeButtonCard:
                FitImage:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    source: 'assets/images/blood_test_logo.png'
                    size_hint: 1,1
            HomeButtonCard:
                FitImage:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.4}
                    source: 'assets/images/doctor_logo.png'
                    size_hint: 1,1

        UpTwoButtonBox:
            HomeButtonCard:
                FitImage:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    source: 'assets/images/symptoms_logo.png'
                    size_hint: 1,1
            HomeButtonCard:
                FitImage:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.4}
                    source: 'assets/images/diagnose_logo.png'
                    size_hint: 1,1



        ################# LABELS #################

        LowTwoButtonBox:
            spacing: 10
            size_hint: 0.9 , 0.3
            MDFloatLayout:
                pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                MDBoxLayout:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    size_hint: 0.8 , 1
                    HomeButtonLabelDark:
                        pos_hint: {"center_x": 0.5 , "center_y": 0.3}
                        text: "Upload your blood test"
            MDFloatLayout:
                pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                MDBoxLayout:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    size_hint: 0.8 , 1
                    HomeButtonLabelLight:
                        pos_hint: {"center_x": 0.5 , "center_y": 0.17}
                        text: "Ask the doctor"


        UpTwoButtonBox:
            spacing: 10
            MDFloatLayout:
                pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                MDBoxLayout:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    size_hint: 0.8 , 1
                    HomeButtonLabelLight:
                        pos_hint: {"center_x": 0.5 , "center_y": 0.3}
                        text: "What are your symptoms?"
            MDFloatLayout:
                pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                MDBoxLayout:
                    pos_hint: {"center_x": 0.5 , "center_y": 0.5}
                    size_hint: 0.8 , 1
                    HomeButtonLabelDark:
                        pos_hint: {"center_x": 0.5 , "center_y": 0.25}
                        text: "Your diagnose"







        ################# MY APPOINTMENT #################



        MDLabel:
            text: "My Appointment"
            halign: "center"
            color: 0,0.439,0.313,1
            bold: True
            pos_hint: {"center_x": 0.35 , "center_y": 0.32}
            font_style: "H6"

        MDCard:
            md_bg_color: get_color_from_hex("#FFFFFF")
            size_hint: None , None
            pos_hint: {"center_x": 0.5, "center_y": 0.22}
            elevation: 3
            radius: [10]
            orientation: "vertical"
            padding: 10
            halign: "left"
            size_hint: 0.75 , 0.15
            MDLabel:
                text: "Dr. Natali Tompson"
                color: 0,0,0,1
                bold: True
                font_style: "Caption"
            MDLabel:

                text: "cardiolog"

                color: 0,0,0,1

                bold: False
                font_style: "Caption"
            MDLabel:

                text: "Bnei Barak, haroeh 21"
                color: 0,0,0,1

                bold: False
                font_style: "Caption"
            MDCard:
                md_bg_color: get_color_from_hex("#012241")
                orientation: "horizontal"
                radius: [5]
                spacing: 5
                padding: 5
                valign: "center"
                halign: "left"
                Image:
                    pos_hint: {"center_y": 0.5}
                    size_hint: None , None
                    width: 15
                    height: 15
                    source: 'assets/images/clock_btn.png'
                MDLabel:

                    text: "Friday, April 25, 8:00am-10:00pm"

                    color: 1,1,1,1

                    bold: False
                    font_style: "Caption"





        ################# BOTTOM NAVBAR #################


        NavbarBox:

            ButtonBox:
                HomeButton:
            ButtonBox:
                DailyButton:
            ButtonBox:
                DiagnoseButton:
            ButtonBox:
                ProfileButton:

        BottomNavbarCard:
        NavbarBox:
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: home_btn
                    source: 'assets/images/home.png'
                MDLabel:
                    halign: "center"
                    text: "Home"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: daily_btn
                    source: 'assets/images/daily.png'
                MDLabel:
                    halign: "center"
                    text: "Daily"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: diagnose_btn
                    source: 'assets/images/diagnose.png'
                MDLabel:
                    halign: "center"
                    text: "Diagnose"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")
            MDBoxLayout:
                orientation: "vertical"
                Image:
                    id: profile_btn
                    source: 'assets/images/profile.png'
                MDLabel:
                    halign: "center"
                    text: "Profile"
                    font_style: "Caption"
                    color: get_color_from_hex("##012241")


